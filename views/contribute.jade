doctype html
html(lang="en")
  head
    title="Comparing Components"
    meta(charset='utf-8')
    link(rel="stylesheet", href="codemirror.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
  body
    nav
        div.nav-wrapper.green.accent-4
            a.brand-logo(href='/') Cool Name TBD
            ul.right.hide-on-med-and-down#nav-mobile
                li
                    a(href="/add") Add
                li
                    a(href="/") Search
                li
                    a(href="/contribute") Contribute
    div.container#examples
        div.row
            form.col.s12#tags
                div.row
                    h4#test-lines Add tags comparing the code of these two navigation bars
                    div.input-field.col.s6
                        input(id="ex1_tags" type="text" name="ex1_tags")
                        label(for="ex1_tags") Add tags separated by commas
                    div.input-field.col.s6
                        input(id="ex2_tags" type="text" name="ex2_tags")
                        label(for="ex2_tags") Add tags separated by commas
                button.btn.waves-effect.green.waves-light(type="submit") Submit
    div.container#freeform
        div.row
            form.col.s12#explanations
                div.row
                    h4 Add comments explaining your tag choices
                div.row
                    div.input-field.col.s12
                        input(id="commenter_name" type="text" name="commenter_name")
                        label(for="commenter_name") Your name as you want it to appear on the site (leave blank if submitting anonymously)
                button.btn.waves-effect.green.waves-light(type="submit")#freeform-submit Submit
    div.container#highlighting
        div.row
            form.col.s12#line-numbers
                div.row
                    h4 Highlight the line numbers in the code that support the tags you've chosen, then click the tags to save your selections
                button.btn.waves-effect.green.waves-light(type="submit")#highlighting-submit Submit
    script(src='/jquery.min.js')
    script(src='https://cdn.firebase.com/js/client/2.2.1/firebase.js')
    script(src='/js/contribute.js')
    script(src="codemirror.js")
    script(src='/js/materialize/bin/materialize.min.js')